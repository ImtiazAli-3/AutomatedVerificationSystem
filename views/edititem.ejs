<link rel="stylesheet" href="/styles.css"> 

<%- include('header') %>
<!-- the form where the admin can edit a users item-->
<div id="page-container">
    <main id="content-wrap">
        <main id="form-wrap">
        <h1>Edit Item</h1>
        <form action="/admin/items/edit/<%= item.id %>" method="post">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" value="<%= item.name %>" required>

            <label for="description">Description:</label>
            <input type="text" id="description" name="description" value="<%= item.description %>" required>

            <label for="price">Price:</label>
            <input type="number" step="0.01" id="price" name="price" value="<%= item.price %>" required>

            <label for="category">Category:</label>
            <input type="text" id="category" name="category" value="<%= item.category %>" required>

            <label for="size">Size:</label>
            <input type="text" id="size" name="size" value="<%= item.size %>" required>

            <label for="material">Material:</label>
            <input type="text" id="material" name="material" value="<%= item.material %>" required>

            <label for="manufacturer">Manufacturer:</label>
            <input type="text" id="manufacturer" name="manufacturer" value="<%= item.manufacturer %>" required>

            <button type="submit">Update Item</button>
        </form>
        </main>
    </main>

    <!-- css generated by chat gpt with prompt 'enhance the layout and make this readable' -->
<style>
#form-wrap {
  max-width: 600px; /* Smaller width for a tighter form */
  margin: auto; /* Centering the content-wrap */
  padding: 20px;
  display: flex; /* Enables flexbox layout */
  flex-direction: column; /* Stacks children vertically */
  align-items: center; /* Centers children horizontally */
}

form {
  width: 100%; /* Ensures form takes up all available space within content-wrap */
  display: grid;
  grid-template-columns: 1fr 3fr; /* Proportionally smaller label to larger input field */
  align-items: center; /* Aligns items in each grid row in the center */
}

form label {
  text-align: right; /* Aligns labels to the right, within their grid area */
}

form input[type="text"],
form input[type="number"],
form select {
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 4px;
}

form button {
  width: auto; /* Allows the button to size according to its content */
  padding: 10px 20px;
  background-color: #007bff;
  color: white;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  transition: background-color 0.3s;
  justify-self: center; /* Centers the button in its grid area */
}

form button:hover {
  background-color: #0056b3;
}

@media (max-width: 768px) {
  #content-wrap {
    max-width: 100%; /* Allows content-wrap to expand to full width on small screens */
    padding: 20px 10px; /* Adjusts padding for smaller screens */
  }

  form {
    grid-template-columns: 1fr; /* Stacks labels above inputs on small screens */
  }

  form label {
    text-align: left; /* Aligns labels to the left on small screens */
  }

  form button {
    justify-self: stretch; /* Stretches button to full width of its grid area */
  }
}
    
</style>
<%- include('footer') %>
</div>